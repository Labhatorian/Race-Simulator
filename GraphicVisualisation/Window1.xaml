<Window x:Class="GraphicVisualisation.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphicVisualisation"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <ListView x:Name="CompetitionList" HorizontalAlignment="Center" Height="175" VerticalAlignment="Center" Width="384" ItemsSource="{Binding Path=CompetitionStats}" SelectionChanged="ItemSelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Driver" DisplayMemberBinding="{Binding Path=Name}"/>
                    <GridViewColumn Header="Points" DisplayMemberBinding="{Binding Path=Points}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label Content="Competitiepunten" HorizontalAlignment="Center" Margin="0,54,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
